{
  "containerDefinitions": [
    {
      "command": [
        "{{ must_env `BOT_NAME` }}"
      ],
      "cpu": 0,
      "essential": true,
      "image": "{{ must_env `BOT_IMAGE` }}",
      "logConfiguration": {
        "logDriver": "awsfirelens",
        "options": {
          "Name": "s3",
          "bucket": "ecs-fluentbit",
          "region": "ap-northeast-1",
          "total_file_size": "1M",
          "upload_timeout": "1m",
          "use_put_object": "On"
        }
      },
      "name": "{{ must_env `BOT_NAME` }}",
      "mountPoints": [],
      "portMappings": [],
      "volumesFrom": [],
      "environment": []
    },
    {
      "cpu": 0,
      "essential": true,
      "image": "{{ must_env `FLUENT_BIT_IMAGE` }}",
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-create-group": "true",
          "awslogs-group": "/ecs/{{ must_env `FLUENT_BIT_NAME` }}",
          "awslogs-region": "ap-northeast-1",
          "awslogs-stream-prefix": "firelens"
        }
      },
      "name": "{{ must_env `FLUENT_BIT_NAME` }}",
      "mountPoints": [],
      "portMappings": [],
      "volumesFrom": [],
      "environment": [],
      "user": "0",
      "firelensConfiguration": {
        "type": "fluentbit"
      }
    }
  ],
  "cpu": "256",
  "taskRoleArn": "ecsTaskRole",
  "executionRoleArn": "ecsTaskExecutionRole",
  "family": "{{ must_env `BOT_NAME` }}",
  "memory": "512",
  "networkMode": "awsvpc",
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "runtimePlatform": {
    "cpuArchitecture": "X86_64",
    "operatingSystemFamily": "LINUX"
  }
}