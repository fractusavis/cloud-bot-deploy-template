{
  "containerDefinitions": [
    {
      "command": [
        "{{ must_env `BOT_NAME` }}"
      ],
      "cpu": 0,
      "essential": true,
      "image": "{{ must_env `BOT_IMAGE` }}",
      "logConfiguration": {
        "logDriver": "awsfirelens",
        "options": null
      },
      "name": "{{ must_env `BOT_NAME` }}"
    },
    {
      "command": [
        "/fluent-bit/bin/fluent-bit -c /fluent-bit/etc/fluent-bit.conf"
      ],
      "cpu": 0,
      "essential": true,
      "image": "{{ must_env `FLUENT_BIT_IMAGE` }}",
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-create-group": "true",
          "awslogs-group": "/ecs/{{ must_env `FLUENT_BIT_NAME` }}",
          "awslogs-region": "ap-northeast-1",
          "awslogs-stream-prefix": "fluent-bit"
        }
      },
      "name": "{{ must_env `FLUENT_BIT_NAME` }}",
      "firelensConfiguration": {
        "type": "fluentbit",
        "options": {
          "config-file-type": "file",
          "config-file-value": "/fluent-bit/etc/fluent-bit.conf"
        }
      }
    }
  ],
  "cpu": "256",
  "executionRoleArn": "ecsTaskExecutionRole",
  "family": "{{ must_env `BOT_NAME` }}",
  "ipcMode": "",
  "memory": "512",
  "networkMode": "awsvpc",
  "pidMode": "",
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "runtimePlatform": {
    "cpuArchitecture": "X86_64",
    "operatingSystemFamily": "LINUX"
  }
}