{
  "containerDefinitions": [
    {
      "command": [
        "{{ must_env `BOT_NAME` }}"
      ],
      "cpu": 0,
      "essential": true,
      "image": "{{ must_env `BOT_IMAGE` }}",
      "logConfiguration": {
        "logDriver": "awsfirelens",
        "options": {
          "Name": "s3",
          "bucket": "ecs-fluentbit",
          "region": "ap-northeast-1",
          "total_file_size": "1M",
          "upload_timeout": "1m",
          "use_put_object": "On"
        }
      },
      "name": "{{ must_env `BOT_NAME` }}"
    },
    {
      "command": [
        "{{ must_env `FLUENT_BIT_NAME` }}"
      ],
      "cpu": 0,
      "essential": true,
      "image": "{{ must_env `FLUENT_BIT_IMAGE` }}",
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/demo/fluent-bit",
          "awslogs-region": "ap-northeast-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "firelensConfiguration": {
        "type": "fluentbit",
        "options": null
      }
    }
  ],
  "cpu": "256",
  "executionRoleArn": "ecsTaskExecutionRole",
  "family": "{{ must_env `BOT_NAME` }}",
  "ipcMode": "",
  "memory": "512",
  "networkMode": "awsvpc",
  "pidMode": "",
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "runtimePlatform": {
    "cpuArchitecture": "X86_64",
    "operatingSystemFamily": "LINUX"
  }
}